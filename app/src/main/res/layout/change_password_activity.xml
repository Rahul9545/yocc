<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_margin_layout">

                <EditText
                    android:id="@+id/change_password_user_id_et"
                    style="@style/MyTextViewStyle"
                    android:hint="User Id/Email Id/Mobile No. *"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/change_password_old_password_et"
                    style="@style/MyTextViewStyle"
                    android:hint="Old password *"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/change_password_new_password_et"
                    style="@style/MyTextViewStyle"
                    android:hint="New password *"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/change_password_confirm_password_et"
                    style="@style/MyTextViewStyle"
                    android:hint="Confirm new password *"
                    android:inputType="text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:visibility="invisible" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/change_password_btn"
        style="@style/MyButtonStyle"
        android:text="Change Password" />
</RelativeLayout>