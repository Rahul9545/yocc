<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_layout"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_layout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_layout"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Menu Name"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/settings_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="@dimen/settings_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".02dp"
                android:layout_margin="@dimen/padding_margin_layout"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_layout"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Description"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/settings_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="@dimen/settings_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".02dp"
                android:layout_margin="@dimen/padding_margin_layout"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_layout"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Routing Pattern"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/settings_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_routing_pattern_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="@dimen/settings_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".02dp"
                android:layout_margin="@dimen/padding_margin_layout"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_layout"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Routing Type"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/settings_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_routing_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="@dimen/settings_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".02dp"
                android:layout_margin="@dimen/padding_margin_layout"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_layout"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Dial Timeout"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/settings_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_dial_timeout_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="@dimen/settings_text_size" />

            </LinearLayout>

            <Button
                style="@style/MyButtonStyle"
                android:text="EDIT"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>