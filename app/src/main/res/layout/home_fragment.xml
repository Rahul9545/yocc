<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_margin_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                app:cardCornerRadius="@dimen/cardview_radius">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/componant_layout_padding"
                    android:layout_marginTop="@dimen/componant_layout_padding"
                    android:orientation="horizontal"
                    android:padding="@dimen/componant_layout_padding"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/live_call_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_live_calls" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/componant_layout_padding"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/live_calls_count_home_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/main_menu_primmery_txt_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Live Calls"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/secondary_text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/componant_layout_padding"
                        android:layout_marginRight="@dimen/componant_layout_padding"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/todays_call_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_total_calls" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/componant_layout_padding"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/todays_calls_count_home_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textColor="#5B9A87"
                                android:textSize="@dimen/main_menu_primmery_txt_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Todays Calls"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/secondary_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/outer_balance_credit_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/componant_layout_padding"
                        android:layout_marginTop="@dimen/componant_layout_padding"
                        android:text="Balance Credits"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/primery_text_size"
                        android:textStyle="bold" />
                    <!--android:text="Balance Credits"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/componant_layout_padding"
                        android:layout_marginTop="@dimen/componant_layout_padding"
                        android:orientation="horizontal"
                        android:padding="@dimen/componant_layout_padding"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_call_transfer" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/componant_layout_padding"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/call_credit_home_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textColor="#7B80C7"
                                    android:textSize="@dimen/main_menu_primmery_txt_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Call Credit"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/secondary_text_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/componant_layout_padding"
                            android:layout_marginRight="@dimen/componant_layout_padding"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_message_calls" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/componant_layout_padding"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/sms_home_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textColor="#937D51"
                                    android:textSize="@dimen/main_menu_primmery_txt_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="SMS Credit"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/secondary_text_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayoutHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/colorPrimary"
                        app:tabTextAppearance="@style/MyTabLayoutStyle"
                        app:tabTextColor="@color/gray" />

                    <FrameLayout
                        android:id="@+id/frame_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/componant_layout_padding"
                        android:text="Call Detail (Last 7 Days)"
                        android:textSize="@dimen/primery_text_size"
                        android:textStyle="bold" />

                    <org.eazegraph.lib.charts.BarChart
                        android:id="@+id/week_wise_call_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/graphs_height"
                        android:padding="@dimen/padding_margin_layout"
                        app:egBarWidth="20dp"
                        app:egEnableScroll="false"
                        app:egFixedBarWidth="true"
                        app:egLegendHeight="40dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/outer_call_duration_graph_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_margin="@dimen/padding_margin_layout"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/componant_layout_padding"
                        android:text="Call Duration (Last 7 Days (hh:mm))"
                        android:textSize="@dimen/primery_text_size"
                        android:textStyle="bold" />

                    <org.eazegraph.lib.charts.BarChart
                        android:id="@+id/week_wise_call_duration_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/graphs_height"
                        android:padding="@dimen/padding_margin_layout"
                        app:egBarWidth="20dp"
                        app:egEnableScroll="false"
                        app:egFixedBarWidth="true"
                        app:egLegendHeight="40dp"
                        app:egShowDecimal="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/componant_layout_padding"
                        android:text="MonthWise Calls"
                        android:textSize="@dimen/primery_text_size"
                        android:textStyle="bold" />

                    <org.eazegraph.lib.charts.StackedBarChart
                        android:id="@+id/month_wise_stacked_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/graphs_height"
                        android:padding="@dimen/padding_margin_layout"
                        app:egEnableScroll="false"
                        app:egLegendHeight="40dp"
                        app:egShowValues="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_margin_layout">

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/padding_margin_layout"
                            android:background="#20A7DF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_layout"
                            android:text="Answered"
                            android:textSize="@dimen/secondary_text_size" />

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/padding_margin_layout"
                            android:background="#85CCEC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_layout"
                            android:text="UnAnswered"
                            android:textSize="@dimen/secondary_text_size" />

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/padding_margin_layout"
                            android:background="#15658A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_layout"
                            android:text="Unopted"
                            android:textSize="@dimen/secondary_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_margin_layout"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/cardview_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_margin_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/componant_layout_padding"
                        android:text="Hourwise Calls"
                        android:textStyle="bold" />

                    <!--<com.github.mikephil.charting.charts.LineChart-->
                    <!--andrdepartmentIdd:iddepartmentId@+id/line_chart"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent" />-->

                    <org.eazegraph.lib.charts.ValueLineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/graphs_height"
                        app:egActivateIndicatorShadow="true"
                        app:egCurveSmoothness="0.4"
                        app:egIndicatorLineColor="@color/color_transparent"
                        app:egIndicatorTextColor="@color/color_transparent"
                        app:egLegendHeight="40dp"
                        app:egShowDecimal="false"
                        app:egShowStandardValue="true"
                        app:egShowValueIndicator="true"
                        app:egUseCubic="false"
                        app:egUseDynamicScaling="false"
                        app:egUseOverlapFill="false" />
                    <!--app:egIndicatorLineColor="#FE6DA8"-->
                    <!--app:egIndicatorTextColor="#000000"-->
                    <!--app:egIndicatorTextUnit="g"-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>