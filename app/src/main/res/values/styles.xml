<resources><!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"><!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/primery_text_size</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_color</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners_text_view</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_margin">@dimen/padding_margin_layout</item>
        <!--<idepartmentNamename="android:singleLine">true</item>-->
        <item name="android:maxLines">1</item>
    </style>

    <style name="MySpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners_text_view</item>
        <item name="android:layout_margin">@dimen/padding_margin_layout</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MyFABStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_add_white_24dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/spacing_between_items</item>
    </style>

    <style name="MyNavigationDrawerStyle">
        <item name="android:textSize">@dimen/primery_text_size</item><!-- text size in menu-->
        <item name="android:typeface">serif</item>
    </style>
</resources>